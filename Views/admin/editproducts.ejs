    <link rel="icon" type="image/png" sizes="16x16" href="/admin/assets/images/logo.png">
    <title>admin dashboard</title>
    <!-- Custom CSS -->
    <link href="/admin/dist/css/style.min.css" rel="stylesheet">
    <!-- This Page CSS -->
     <link rel="stylesheet" href="/admin/assets/libs/morris.js/morris.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- <link href="./admin/assets/libs/morris.js/morris.css" rel="stylesheet"> -->
</head>
<body>
     <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
     
        <!-- header -->
        <%- include("./parts/header.ejs"); %>
       
        <!-- sidebar -->
         <%- include("./parts/sidebar.ejs"); %>
         
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
         <div class="page-wrapper">
       <section class="dash">
            <% if (typeof success !=='undefined' && success) { %>

                                    <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                                        âœ… Product edited successfully!
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                    </div>
                                    <% } %>
                                        <h2>Edit Products</h2>
                                        <form action="/dash/editproduct" method="post" enctype="multipart/form-data">
                                          
                                            <input type="hidden" name="id" value="<%= product._id %>">

                                            <div class="md-3 m-2 text-start">
                                                <label for="" class="form-label">Title
                                                </label>
                                                <input type="text" name="title" id="title" value="<%= product.Title %>"
                                                    class="form-control border-secondary border-2 text-dark"
                                                    placeholder="Furniture Title">
                                            </div>
                                            <div class="md-3 m-2 text-start">
                                                <label for="" class="form-label"> Price
                                                </label>
                                                <input type="number" name="price" value="<%= product.Price %>"
                                                    class="form-control border-secondary border-2 text-dark"
                                                    placeholder="Furniture Price">
                                            </div>
                                            <div class="md-3 m-2 text-start">
                                                <label for="" class="form-label">Description
                                                </label>
                                                <textarea name="desc" 
                                                    class="form-control border-secondary border-2 text-dark" cols="30"
                                                    rows="10" placeholder="Furniture Description"><%= product.Description %></textarea>
                                            </div>
                                            <div class="md-3 m-2 text-start">
                                                <label for="" class="form-label">Specifications
                                                </label>
                                                <textarea name="specifications" 
                                                    class="form-control border-secondary border-2 text-dark" cols="30"
                                                    rows="10" placeholder="Furniture Specifications"><%= product.Specifications %></textarea>
                                            </div>
                                            <div class="md-3 m-2 text-start">
                                                <label for="" class="form-label"> Dimensions
                                                </label>
                                                <input type="text" name="dimensions" value="<%= product.Dimensions %>"
                                                    class="form-control border-secondary border-2 text-dark"
                                                    placeholder="Furniture Dimensions">
                                            </div>
                                            <div class="md-3 m-2 text-start">
                                                <label for="" class="form-label"> Materials
                                                </label>
                                                <input type="text" name="material" value="<%= product.Material %>"
                                                    class="form-control border-secondary border-2 text-dark"
                                                    placeholder="Furniture Materials">
                                            </div>
                                               <div class="md-3 m-2 text-start">
                                                <label for="" class="form-label"> Upload Images
                                                </label>
                                                 <p>Current Image 1: <img src="/<%= product.Image1 %>" width="100"></p>
                                                <input type="file" name="image1" 
                                                    class="form-control border-secondary border-2 text-dark"
                                                    placeholder="Furniture Images">
                                                    <br>
                                                     <p>Current Image 2: <img src="/<%= product.Image2 %>" width="100"></p>
                                                <input type="file" name="image2"
                                                    class="form-control border-secondary border-2 text-dark"
                                                    placeholder="Upload 2nd image">
                                                    <br>
                                                     <p>Current Image 3: <img src="/<%= product.Image3 %>" width="100"></p>
                                                    <input type="file" name="image3"
                                                    class="form-control border-secondary border-2 text-dark"
                                                    placeholder="Furniture Images">
                                            </div>      
                                            <div class="md-3 m-2 text-start">

                                                <input type="submit" id="addbtn" class="btn btn-lg w-100"
                                                    value="Edit Product">
                                            </div>
                                        </form>
        </section>
             </div>
           
            <!-- footer -->
           
            <footer class="footer text-center text-muted">
                All Rights Reserved by Roomify
            </footer>
    </div>
     <script>
                setTimeout(() => {
                    const alert = document.querySelector('.alert');
                    if (alert) alert.style.display = 'none';
                }, 3000);
            </script>
