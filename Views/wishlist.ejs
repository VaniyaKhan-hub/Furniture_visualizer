<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
        integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <!-- Header Start -->
    <%- include('header.ejs'); %>
        <!-- Header End -->

        <div class="titlecard" id="setdisplay">
            Home > Wishlist
        </div>


        <div class="cart" id="setdisplay">
            <table>
                <thead>
                    <tr>
                        <th>IMAGE</th>
                        <th>PRODUCT</th>
                        <th>PRICE</th>
                        <th>ACTIONS</th>
                    </tr>

                </thead>
                <tbody id="cart-body">
                    <!-- <% let i=0;%> -->
                    <% if(productrecords !="" ){%>
                        <% productrecords.forEach((data)=>{%>
                            <!-- <% i++ %> -->
                            <tr>
                                <!-- <td>
                                        <%= i%>
                                    </td> -->
                                <td>
                                    <img src="/assets/<%= data.Image1 %>" class="
                    m-2" alt="" width="50" height="50">
                                </td>
                                <td>
                                    <%= data.Title%>
                                </td>
                                <td>
                                    <%= data.Price%>
                                </td>
                                <td>
                                        <a href="/wishremove/<%= data._id%>"><i class="fa-solid fa-xmark" id="wishicons" style="color: red;" title="Remove From Wishlist"></i>
                                        </a>
                                        <a href="/addcart/<%= data._id%>"><i class="fa-solid fa-cart-arrow-down" id="wishicons" style="color: green;" title="Add To Cart"></i>
                                        </a>
                                </td>
                            </tr>
                            <%})%>
                                <%} else{%>
                                    <td colspan="7" class="text-center"> No items in your Wishlist </td>

                                    <% }%>
                </tbody>
            </table>
        </div>
        <!-- Footer Start -->
        <%- include('footer.ejs'); %>
            <!-- Footer End -->
        <script src="/js/cartcount.js"></script>

</body>

</html>